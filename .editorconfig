# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*] # 모든 파일에 적용될 기본 설정
charset = utf-8
end_of_line = lf  # 줄 끝 문자: LF (Unix/macOS 스타일) - Windows/Mac 혼용 권장
insert_final_newline = true # 파일 끝에 빈 줄 삽입
trim_trailing_whitespace = true # 줄 끝의 불필요한 공백 제거
indent_style = space # 들여쓰기 스타일: 공백 사용
indent_size = 4      # 기본 들여쓰기 크기: 4칸

[*.md] # Markdown 파일에만 적용
trim_trailing_whitespace = false

[*.{yml,yaml}] # YAML 파일에만 적용
indent_size = 2

# Gradle Groovy DSL (.gradle)
[*.gradle]
indent_size = 4

# Gradle Kotlin DSL (.gradle.kts)
[*.gradle.kts]
indent_size = 4

# Java 파일
[*.java]
indent_size = 4

# JavaScript/TypeScript/Vue 파일
[*.{js,ts,vue}]
indent_size = 2

# HTML 파일
[*.html]
indent_size = 2

# CSS/SCSS 파일
[*.{css,scss}]
indent_size = 2

# JSON 파일
[*.json]
indent_size = 2